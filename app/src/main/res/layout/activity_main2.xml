<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    >
<ImageView
    android:translationY="-190dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/figmabackgr"
    android:scaleY="2.0"
    android:scaleX="3.5">
</ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >


            <ImageView
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:scaleX="2"
                android:scaleY="2.2"
                android:layout_gravity="center"
                android:src="@drawable/figmalogo">

            </ImageView>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:scaleX="1.3"
                android:scaleY="1.4"
                android:src="@drawable/welctext">

            </ImageView>

            <ImageButton
                android:layout_marginTop="80dp"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:scaleX="1"
                android:onClick="vhodBtn"
                android:scaleY="1"
                android:id="@+id/vhodBtn"
                android:src="@drawable/voytibtn">
            </ImageButton>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_width="330dp"
                android:text="Еще нет аккаунта? Зарегистрируйтесь"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>